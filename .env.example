# Application Settings
API_HOST=0.0.0.0
API_PORT=8000
ENV=development
DEBUG=true
CORS_ORIGINS=*

# Dremio Configuration
# For on-prem: http://localhost:9047
# For Dremio Cloud: https://api.dremio.cloud
DREMIO_URL=http://localhost:9047

# Option 1: Use username/password authentication (on-prem only)
DREMIO_USERNAME=admin
DREMIO_PASSWORD=your_password_here

# Option 2: Use Personal Access Token (recommended for security)
# Required for Dremio Cloud, optional for on-prem
DREMIO_TOKEN=your_personal_access_token_here

# For Dremio Cloud only - your Project ID from Dremio Cloud Console
DREMIO_PROJECT_ID=

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dremio_optimizer

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.1

# Observability Configuration
LOG_LEVEL=INFO
TEMPO_ENDPOINT=http://localhost:4317
LOKI_ENDPOINT=http://localhost:3100

# Collection Settings
COLLECTION_INTERVAL_MINUTES=30
COLLECTION_LOOKBACK_HOURS=24

# Analysis Settings
BASELINE_LOOKBACK_DAYS=30
MIN_BASELINE_SAMPLES=5
REGRESSION_THRESHOLD_PCT=50.0

# Recommendation Settings
MIN_ESTIMATED_IMPROVEMENT_PCT=20.0
